<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="../css/style.css">
    <title>ViewPost</title>
</head>
<body>
    <div class="logo">
        <div align="right">By Alexander Bjeldanes</div>
        <div><h1>CSC317 Photos</h1></div>
    </div>
    
    <div class="topnav">
        {{> nav}}

        
    </div>

    <br>
    <br>
    <br>

    <div class="viewpost" src="{{currentPost.photopath}}">
        <h2>Submitted Post</h2>
        <form action="viewpost">
            <section>
                <label for="title">{{currentPost.title}}</label>
            </section>

            <section>
                <label for="author">{{currentPost.username}}</label>
            </section>

            <section>
                <label for="title">{{currentPost.description}}</label>
                <input type="date" id="start" name="posted"
                       >
            </section>

            <section>
                <img src="/">
            </section>
        </form>
    </div>

    {{#if logged}}
        <script>
            let ele = document.getElementById('logout-button');
            if (ele) {
                ele.onclick = (even) => {
                    fetch('/users/logout', {
                        method: "POST"
                    })
                    .then((data) => {
                        location.replace('/'); 
                    })
                }
            }
        </script>
    {{/if}}
</body>
</html>