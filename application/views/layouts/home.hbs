<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8>">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/public/css/style.css">
    <title>{{title}}</title>
</head>
<body>
    <div class="container">
        {{log this}}
        {{> header}}
        {{#if messages}}
        {{> flashmessage}}
        {{/if}}
        {{{body}}}
    </div>

    {{#if logged}}
        <script>
            let ele = document.getElementById('logout-button');
            if (ele) {
                ele.onclick = (even) => {
                    fetch('/users/logout', {
                        method: "POST"
                    })
                    .then((data) => {
                        location.replace('/'); 
                    })
                }
            }
        </script>
    {{/if}}
</body>
</html>